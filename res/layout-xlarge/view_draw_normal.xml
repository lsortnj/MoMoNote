<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/draw_setting_bg"
    android:padding="15dp" >

    <FrameLayout
        android:id="@+id/view_draw_normal_stroke_area"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true">
        
         <mo.pay.post_it.widget.MomoStrokeView
             android:id="@+id/view_draw_normal_stroke_img"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_gravity="center" />
        
   </FrameLayout>
    
    <LinearLayout
        android:id="@+id/view_draw_normal_quick_pick_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_draw_normal_stroke_area"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_draw_normal_btn_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_draw_normal_quick_pick_area"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

    </LinearLayout>

    <SeekBar
        android:id="@+id/view_draw_normal_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_draw_normal_stroke_area"
        android:layout_alignTop="@+id/view_draw_normal_stroke_area"
        android:layout_centerInParent="false"
        android:layout_toRightOf="@+id/view_draw_normal_stroke_area"
        android:max="15"
        android:progress="5"
        android:progressDrawable="@drawable/seekbar_progress"
        android:thumb="@drawable/seekbar_thumb" />

</RelativeLayout>