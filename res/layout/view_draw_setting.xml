<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#55aaaaaa"
    android:paddingTop="20dp" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:id="@+id/draw_setting_top_area_scroll_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/draw_setting_btn_draw_normal"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/draw_normal" />

            <ImageButton
                android:id="@+id/draw_setting_btn_draw_highlight"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/draw_highlight" />

            <ImageButton
                android:id="@+id/draw_setting_btn_draw_eraser"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/eraser" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/draw_setting_panel_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalScrollView1"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

    </LinearLayout>

</RelativeLayout>