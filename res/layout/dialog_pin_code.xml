<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:paddingBottom="40dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp" >

    <TextView
        android:id="@+id/dialog_pincode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#837F78"
        android:textSize="23sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dialog_pincode_edittext"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_pincode_title"
        android:layout_centerHorizontal="true"
        android:duplicateParentState="true"
        android:ems="10"
        android:enabled="false"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="numberPassword"
        android:lines="1"
        android:maxLines="1"
        android:selectAllOnFocus="false"
        android:textSize="18sp"
        android:textStyle="bold" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:id="@+id/dialog_pincode_btn_area"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/dialog_pincode_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/dialog_pincode_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_pincode"
                android:text="1"
                android:textColor="#837F78"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_pincode_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_pincode"
                android:text="2"
                android:textColor="#837F78"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_pincode_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_pincode"
                android:text="3"
                android:textColor="#837F78"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/dialog_pincode_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_pincode"
                android:text="4"
                android:textColor="#837F78"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_pincode_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_pincode"
                android:text="5"
                android:textColor="#837F78"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_pincode_btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_pincode"
                android:text="6"
                android:textColor="#837F78"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/dialog_pincode_btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_pincode"
                android:text="7"
                android:textColor="#837F78"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_pincode_btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_pincode"
                android:text="8"
                android:textColor="#837F78"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_pincode_btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_pincode"
                android:text="9"
                android:textColor="#837F78"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/diloag_pincode_btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_pincode"
                android:text="@string/text_clear"
                android:textColor="#837F78"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_pincode_btn0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_pincode"
                android:text="0"
                android:textColor="#837F78"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_pincode_btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_pincode"
                android:text="@string/text_comfirm"
                android:textColor="#837F78"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>