<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_small"
    android:padding="30dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_single_input_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:weightSum="2" >

        <Button
            android:id="@+id/dialog_single_input_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal"
            android:text="@string/text_comfirm"
            android:textColor="@color/button_text"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dialog_single_input_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal"
            android:text="@string/text_cancel"
            android:textColor="@color/button_text"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_single_input_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text" />

    <EditText
        android:id="@+id/dialog_single_input_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/dialog_single_input_title"
        android:duplicateParentState="true"
        android:enabled="true"
        android:fitsSystemWindows="false"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>