<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/album_view_item_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/album_cover_default" />

    <TextView
        android:id="@+id/album_view_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/album_view_item_cover"
        android:layout_alignRight="@+id/album_view_item_cover"
        android:layout_below="@+id/album_view_item_cover"
        android:background="@drawable/text_view_round_bg"
        android:freezesText="true"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:minLines="2"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text"
        android:textSize="@dimen/message_text_size"
        android:textStyle="bold" />

</RelativeLayout>